<resources>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button.Icon">
        <item name="iconGravity">textEnd</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.Button</item>
        <item name="android:minHeight">@dimen/min_height_button</item>
    </style>

    <style name="Widget.App.ImageButton.Borderless" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="tint">@color/colorPrimary</item>
    </style>

    <style name="Widget.AppCompat.ProgressBar.Primary" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/colorPrimary</item>
        <item name="android:indeterminateTintMode">src_atop</item>
    </style>

    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">5dp</item>
    </style>

    <style name="Widget.MaterialComponents.FloatingActionButton.Primary" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/white</item>
        <item name="tint">@color/colorPrimary</item>
    </style>
</resources>